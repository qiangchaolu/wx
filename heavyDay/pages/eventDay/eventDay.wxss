/* pages/eventDay/eventDay.wxss */
.jia{
  width: 100%;
  text-align: center;
  color: #888;
  padding-top: 100rpx;
  padding-bottom: 50rpx;
}
.jia>image{
  display: block;
  width: 300rpx;
  height: 300rpx;
  margin: auto;
}
.jz>.ul{
  width: 100%;
  height: 100%;
}
.jz>.ul>.li{
  width: 90%;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom:1rpx solid #f5f5f5;
  display: flex;
  justify-content: space-between;
  margin: auto;
}
.jz>.ul>.li>.t1{
  width: 60%;
  height: 100rpx;
  color: #000;
  text-align: left;
}
.jz>.ul>.li>.t2{
  width: 40%;
  height: 70rpx;
  line-height: 70rpx;
  margin-top: 15rpx;
  text-align: center;
  background: #f57878;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}